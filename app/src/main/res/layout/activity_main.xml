<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/headerTitle"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#4CAF50"
        android:gravity="center_vertical|center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Manajemen Data Buah"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- ScrollView untuk isi konten -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Horizontal Scroll Card Info -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="125dp"
                    android:orientation="horizontal">

                    <!-- Info Card 1 -->
                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/info_card_bg"
                        android:elevation="4dp"
                        android:orientation="vertical"
                        android:layout_marginLeft="5dp"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Buah"
                            android:textColor="#4CAF50"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtTotalBuah"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@android:color/black"
                            android:textSize="24sp" />
                    </LinearLayout>

                    <!-- Info Card 2 -->
                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/info_card_bg"
                        android:elevation="4dp"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Buah Matang"
                            android:textColor="#4CAF50"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtTotalBuahMatang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@android:color/black"
                            android:textSize="24sp" />
                    </LinearLayout>

                    <!-- Info Card 3 -->
                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/info_card_bg"
                        android:elevation="4dp"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Buah Mentah"
                            android:textColor="#4CAF50"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtTotalBuahMentah"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@android:color/black"
                            android:textSize="24sp" />
                    </LinearLayout>

                    <!-- Info Card 1 -->
                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/info_card_bg"
                        android:elevation="4dp"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Buah Busuk"
                            android:textColor="#4CAF50"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtTotalBuahBusuk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@android:color/black"
                            android:textSize="24sp" />
                    </LinearLayout>

                    <!-- Info Card 1 -->
                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/info_card_bg"
                        android:elevation="4dp"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Buah Lewat Matang"
                            android:textColor="#4CAF50"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtTotalBuahLewatMatang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@android:color/black"
                            android:textSize="24sp" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Placeholder Grafik -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Grafik Buah per Bulan"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChart"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        app:itemIconTint="@color/selector_nav"
        app:itemTextColor="@color/selector_nav"
        app:menu="@menu/bottom_nav_menu" />
</LinearLayout>
